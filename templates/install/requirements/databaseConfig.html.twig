{% extends 'base-nonav.html.twig' %}

{% block title %}Database Config{% endblock %}


{% block body %}
<div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xxl-4 col-lg-5">
                <div class="card">
                    <!-- Logo-->
                    <div class="card-header py-4 text-center bg-primary">
                        {# <a href="index.html">
                            <span><img src="assets/images/logo.png" alt="logo" height="22"></span>
                        </a> #}
                        <h3>Configuration de la base de donn√©es</h3>
                    </div>

                    <div class="card-body p-4">
                        
                        <div class="text-center w-75 m-auto">
                            <h4 class="text-dark-50 text-center mt-0 fw-bold">Free Sign Up</h4>
                            
                        </div>

                        
                        {{ form_start(database_form) }}
                             <div class="mb-3">
                                {{ form_label(database_form.databaseDriver, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(database_form.databaseDriver, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                          
                                {{form_label(database_form.databaseHost,null,{
                                    'label_attr':{
                                        'class':'form-label'
                                    }
                                })}}
                                {{form_widget(database_form.databaseHost,{
                                    'attr':{
                                        'class':'form-control'
                                    }
                                })}}
                            </div>

                            <div class="mb-3">
                                
                                 {{ form_label(database_form.databasePort, null, {
                                    'label_attr': {'class': 'form-label'}
                                 }) }}
                                 {{ form_widget(database_form.databasePort, {
                                    'attr': {'class': 'form-control'}
                                 }) }}
                            </div>

                            <div class="mb-3">
                                
                                {{ form_label(database_form.databaseName, null, {
                                    'label_attr': {'class': 'form-label'}
                                }) }}
                                {{ form_widget(database_form.databaseName, {
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="mb-3">
                                
                                {{ form_label(database_form.databaseUser, null, {
                                    'label_attr': {'class': 'form-label'}
                                }) }}
                                {{ form_widget(database_form.databaseUser, {
                                    'attr': {'class': 'form-control'}
                                }) }}
                            </div>
                            <div class="mb-3">
                               
                                {{ form_label(database_form.databasePassword, null, {
                                    'label_attr': {'class': 'form-label'}
                                }) }}
                                <div class="input-group input-group-merge">
                                    {{ form_widget(database_form.databasePassword, {
                                        'attr': {'class': 'form-control'}
                                    }) }}
                                    <div class="input-group-text" data-password="false">
                                        <span class="password-eye"></span>
                                    </div>
                                </div>
                            </div>

                           

                            {# <div class="mb-3 text-center">
                                <button class="btn btn-primary" type="submit"> Sign Up </button>
                            </div> #}
                        {{ form_end(database_form) }}
                        
                    </div> <!-- end card-body -->
                </div>
                <!-- end card -->

                {# <div class="row mt-3">
                    <div class="col-12 text-center">
                        <p class="text-muted">Already have account? <a href="pages-login.html" class="text-muted ms-1"><b>Log In</b></a></p>
                    </div> <!-- end col-->
                </div> #}
                <!-- end row -->

            </div> <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</div>

{% endblock %}